<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_top_banner_content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/banner_height"
    android:background="@color/textcolor_orange" >

    <include layout="@layout/app_top_left_back" />

    <!-- 右侧的 -->
    <!-- 如果需要线条点击效果时调用： -->
    <!-- findViewById(R.id.app_top_banner_right_layout).setBackgroundResource(R.drawable.app_top_right_bg); -->
    <!-- 只要点击效果时调用： -->
    <!-- findViewById(R.id.app_top_banner_right_layout).setBackgroundResource(R.drawable.app_top_click_focuse_bg); -->

    <LinearLayout
        android:id="@+id/app_top_banner_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/banner_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/app_top_banner_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/app_top_right_bg"
            android:layout_marginRight="@dimen/margin_10"
            android:gravity="center"
            android:text="联系客服"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize12" />

        <ImageView
            android:id="@+id/app_top_banner_right_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:padding="@dimen/margin_10"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/app_top_banner_centre_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal" >


        <TextView
            android:id="@+id/app_top_banner_centre_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:text="订单详情" />

        <TextView
            android:id="@+id/app_top_banner_centre_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@id/app_top_banner_centre_top"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:text="订单编号：123456"
            android:textSize="@dimen/textsize13" />
    </RelativeLayout>

</RelativeLayout>