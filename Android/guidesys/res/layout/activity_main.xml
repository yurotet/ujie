<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/top_banner"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/backgroundcolor_topbanner">

        <LinearLayout
            android:id="@+id/tab_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/tab_order_avaliable"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="待接订单"
                android:textColor="@color/textcolor_order_tab"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tab_order_agreed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="已接订单"
                android:textColor="@color/textcolor_order_tab"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/icon_order_agreed_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-8dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/tab_container"
            android:background="@drawable/icon_orange"
            android:gravity="center"
            android:padding="2dp"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/btn_custom_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/background_custom_server"
            android:padding="5dp"
            android:text="客服"
            android:textColor="@color/textcolor_orange"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_order_list_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_banner" />

    <air.com.miutour.guidesys.widget.SlidingLayer
        android:id="@+id/sliding_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/user_tag_layout"
            layout="@layout/layout_user_tag" />
        <include
            android:id="@+id/user_detail_layout"
            layout="@layout/layout_user_detail" />

    </air.com.miutour.guidesys.widget.SlidingLayer>
</RelativeLayout>
