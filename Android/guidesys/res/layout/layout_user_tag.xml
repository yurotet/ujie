<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:gravity="bottom">

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/background_user_tag" />

        <air.com.miutour.guidesys.widget.CircularImage
            android:id="@+id/user_tag_avatar"
            android:layout_width="75dp"
            android:layout_height="79dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="17.5dp"
            android:layout_marginTop="-16dp"
            android:paddingTop="11dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/background_user_avatar"
             />

        <TextView
            android:id="@+id/user_tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/user_tag_avatar"
            android:text="曹格非"
            android:textColor="@color/textcolor_black_3e"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/user_tag_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/user_tag_name"
            android:layout_below="@id/user_tag_name"
            android:layout_marginTop="7dp"
            android:text="初级导游"
            android:textColor="@color/textcolor_gray"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="-7dp"
            android:background="@drawable/background_user_tag_message"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="18dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_message" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="消息"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>